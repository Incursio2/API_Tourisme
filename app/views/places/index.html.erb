<h1>Liste des places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Datestart</th>
      <th>Dateend</th>
      <th>Event</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= place.address %></td>
        <td><%= place.dateStart %></td>
        <td><%= place.dateEnd %></td>
        <td><%= place.event %></td>
        <td><%= place.longitude %></td>
        <td><%= place.latitude %></td>
        <td><%= link_to 'Afficher', place %></td>
        <td><%= link_to 'Editer', edit_place_path(place) %></td>
        <td><%= link_to 'Supprimer', place, method: :delete, data: { confirm: 'Etes vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

