<h1>Liste des opinions</h1>

<table>
  <thead>
    <tr>
      <th>Pseudo</th>
      <th>Commentaire</th>
      <th>Date</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.pseudo %></td>
        <td><%= opinion.comment %></td>
        <td><%= opinion.date %></td>
        <td><%= opinion.mark %></td>
        <td><%= link_to 'Afficher', opinion %></td>
        <td><%= link_to 'Editer', edit_opinion_path(opinion) %></td>
        <td><%= link_to 'Supprimer', opinion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvel Opinion', new_opinion_path %>
